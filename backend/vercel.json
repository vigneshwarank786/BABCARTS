{
    "version": 2,
    "builds": [
      { "src": "backend/server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.js" },
      { "handle": "filesystem" }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "functions": {
      "api/*.js": {
        "runtime": "@vercel/node"
      }
    }
  }
  